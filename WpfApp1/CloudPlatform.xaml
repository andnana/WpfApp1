                <StackPanel Orientation="Horizontal">
                    <Label
                        Width="84"
                        Margin="10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Right"
                        Background="#5a5a58"
                        BorderThickness="0"
                        Content="{DynamicResource cruise_path}"
                        Foreground="White" />
                    <hc:ComboBox
                        Name="Cruise_comBox"
                        Width="116"
                        Height="30"
                        Margin="4"
                        Foreground="Black"
                        SelectedIndex="0">
                        <!--    <ComboBoxItem
                            Content="路径1"
                            Foreground="Black"
                            IsSelected="True" />
                        <ComboBoxItem Content="路径2" Foreground="Black" />
                        <ComboBoxItem Content="路径3" Foreground="Black" />
                        <ComboBoxItem Content="路径4" Foreground="Black" />
                        <ComboBoxItem Content="路径5" Foreground="Black" />
                        <ComboBoxItem Content="路径6" Foreground="Black" />
                        <ComboBoxItem Content="路径7" Foreground="Black" />
                        <ComboBoxItem Content="路径8" Foreground="Black" />-->
                    </hc:ComboBox>
                </StackPanel>


                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Margin="12"
                        Background="#326cf3"
                        BorderThickness="0"
                        Click="Start_Button_Click"
                        Content="{DynamicResource start}"
                        Foreground="White" />
                    <Button
                        Margin="12"
                        Background="#326cf3"
                        BorderThickness="0"
                        Click="cruiseStop"
                        Content="{DynamicResource stop}"
                        Foreground="White" />
