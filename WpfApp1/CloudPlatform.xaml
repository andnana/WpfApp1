                        Margin="12"
                        Background="#326cf3"
                        BorderThickness="0"
                        Click="addCruisePoint"
                        Content="设置"
                        Foreground="White" />-->

                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label
                        Width="90"
                        Margin="10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Right"
                        Background="#5a5a58"
                        BorderThickness="0"
                        Content="{DynamicResource move_speed}"
                        Foreground="White" />
                    <hc:NumericUpDown
                        Name="speedNumericUpDown"
                        Grid.Column="1"
                        Width="56"
                        Height="30"
                        Increment="2"
                        Maximum="15"
                        Minimum="1"
                        Value="1" />
                    <Button
                        Margin="12,12,16,12"
                        HorizontalAlignment="Right"
                        Background="#326cf3"
                        BorderThickness="0"
                        Click="speedSetup"
                        Content="{DynamicResource setup}"
                        Foreground="White" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">

                    <Button
                        Margin="20,10,10,10"
                        Background="#326cf3"
                        BorderThickness="0"
                        Click="initSpeed"
                        Content="{DynamicResource init}"
                        Foreground="White" />
                    <Button
                        Width="20"
                        Height="20"
                        Margin="4"
                        Padding="0"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="question">
                        <!--  <hc:Poptip.Instance>
                            <hc:Poptip
                                Content="{DynamicResource init_tips}"
                                HitMode="Hover"
                                PlacementType="TopRight" />
                        </hc:Poptip.Instance>-->
                        <Button.Content>
                            <Image
                                Width="20"
                                Height="20"
                                Source="/WpfApp1;component/Resources/question_icon.png" />
                        </Button.Content>
                    </Button>
                    <hc:LoadingCircle
                        Name="loading"
                        Width="20"
                        Height="20"
                        Margin="10"
                        Foreground="White"
                        Visibility="Hidden" />
                    <TextBlock
                        Name="loadingTips"
                        Margin="10"
                        VerticalAlignment="Center"
                        Foreground="White" />
                </StackPanel>
            </StackPanel>

        </Grid>
    </Grid>

</Window>
