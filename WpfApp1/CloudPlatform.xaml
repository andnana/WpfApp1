<Window
    x:Class="WpfApp1.CloudPlatform"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="检测设置"
    Width="470"
    Height="300"
    Background="Black"
    BorderBrush="White"
    BorderThickness="1"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,0,1">
            <Grid
                Name="TitleBar"
                Grid.Row="0"
                Grid.Column="0"
                Background="#5a5a58">
                <!--  窗体边框  -->
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <!--<Image
                        Width="120"
                        Height="23"
                        Margin="0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="/WpfApp1;component/Resources/test_set.png" />-->
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="White"
                        Text="{DynamicResource test_setup}" />
                </Grid>
                <Border
                    Grid.Column="2"
                    Background="#5a5a58"
                    BorderBrush="#5a5a58"
                    BorderThickness="0">

                    <!--  内容区域  -->
                    <Grid Margin="0,0,10,0">
                        <!--  标题栏  -->
                        <Border
                            Height="40"
                            Padding="0"
                            Background="#5a5a58"
                            CornerRadius="0,0,0,0">
                            <DockPanel>
                                <DockPanel LastChildFill="False">
                                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                        <Button
                                            Name="BtMin"
                                            Width="16"
                                            Height="16"
                                            Margin="6"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                            <Button.Content>
                                                <Image
                                                    Width="16"
                                                    Height="16"
                                                    Source="/WpfApp1;component/Resources/Minimize.png" />
                                            </Button.Content>
                                        </Button>
                                        <!--       <Button  Margin="6"  Name="BtMax" Width="16" Height="16"  Padding="0" BorderThickness="0" Background="Transparent">
                                 <Button.Content>
                                     <Image Source="/WpfApp1;component/Resources/Maximize.png" Width="16" Height="16"/>
                                 </Button.Content>
                             </Button>-->
                                        <Button
                                            Name="BtClose"
                                            Width="16"
                                            Height="16"
                                            Margin="6"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0">
                                            <Button.Content>
                                                <Image
                                                    Width="16"
                                                    Height="16"
                                                    Source="/WpfApp1;component/Resources/Close.png" />
                                            </Button.Content>
                                        </Button>
                                    </StackPanel>
                                </DockPanel>
                            </DockPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Background="#5a5a58">
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical">
                <!--   <TextBox Text="{Binding Name1}" /> -->

                <StackPanel Orientation="Horizontal">
                    <Label
                        Width="80"
                        Margin="10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Right"
                        Background="#5a5a58"
                        BorderThickness="0"
                        Content="{DynamicResource device_ip}"
                        Foreground="White" />
                    <Label
                        Name="deviceIPLabel"
                        Width="100"
                        Margin="10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Left"
                        Background="#5a5a58"
                        BorderThickness="0"
                        Foreground="White" />
                    <!--  <hc:ComboBox
                        Name="DeviceIPCombobox"
                        Width="116"
                        Height="26"
                        Margin="4"
                        Foreground="Black"
                        SelectedIndex="0">
                        <ComboBoxItem
                            Content="全部"
                            Foreground="Black"
                            IsSelected="True" />
                    </hc:ComboBox>-->
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label
                        Width="80"
                        Margin="10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Right"
                        Background="#5a5a58"
                        BorderThickness="0"
                        Content="{DynamicResource high_alarm}"
                        Foreground="White" />
                    <TextBox
                        Name="HigherAlarmTextBox"
                        Width="116"
                        Margin="4"
                        VerticalAlignment="Center"
                        Foreground="Black" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label
                        Width="80"
                        Margin="10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Right"
                        Background="#5a5a58"
                        BorderThickness="0"
                        Content="{DynamicResource lower_alarm}"
                        Foreground="White" />
                    <TextBox
                        Name="LowerAlarmTextBox"
                        Width="116"
                        Margin="4"
                        VerticalAlignment="Center"
                        Foreground="Black" />
                </StackPanel>


                <Button
                    Margin="12,12,16,12"
                    HorizontalAlignment="Right"
                    Background="#326cf3"
                    BorderThickness="0"
                    Click="setAlarmValue"
                    Content="{DynamicResource setup}"
                    Foreground="White" />

            </StackPanel>
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Orientation="Vertical">

                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Margin="12"
                        Background="#326cf3"
                        BorderThickness="0"
                        Click="presets"
                        Content="{DynamicResource preset_point}"
                        Foreground="White" />
                    <Button
                        Margin="12"
                        Background="#326cf3"
                        BorderThickness="0"
                        Click="ToCruises"
                        Content="{DynamicResource cruise}"
                        Foreground="White" />
                </StackPanel>

